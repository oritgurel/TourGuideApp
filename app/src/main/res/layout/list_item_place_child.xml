<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/expanded_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/main_item"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/open_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="Open: "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/opening"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_alignBaseline="@+id/open_title"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/open_title"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="Price: "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/price_content"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_alignBaseline="@+id/price_title"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price_title"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/price_title"
        android:layout_marginVertical="10dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/description"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:textColor="@color/black"
        tools:text="bla bla bla bla"/>



</LinearLayout>
